{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "test": {},
    "test:e2e": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:e2e:ui": {
      "cache": false
    },
    "test:e2e:headed": {
      "cache": false
    },
    "test:e2e:debug": {
      "cache": false
    }
  }
}
